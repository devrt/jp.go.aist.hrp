#!/bin/sh

CONFDIR=${HOME}/@OPENHRP_CONFDIR_NAME@

if [ ! -d ${CONFDIR} ] ; then
    mkdir ${CONFDIR}
fi

LOGDIR=${CONFDIR}/omninames-log

if [ ! -d ${LOGDIR} ] ; then
    mkdir ${LOGDIR}
fi

HOSTNAME=`hostname`

if [ -f ${LOGDIR}/omninames-${HOSTNAME}.log ] ; then
    rm ${LOGDIR}/omninames-${HOSTNAME}.log
fi

if [ -f ${LOGDIR}/omninames-${HOSTNAME}.bak ] ; then
    rm ${LOGDIR}/omninames-${HOSTNAME}.bak
fi

NAMESERV="@OMNINAMES@ -start @NS_PORT@ -logdir ${LOGDIR}"

if [ $1 ]; then
    echo $NAMESERV
else
    $NAMESERV
fi

