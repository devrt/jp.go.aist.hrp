#!/bin/sh

prefix=@CONFIG_PREFIX@
exec_prefix=${prefix}/bin
idl_prefix=${prefix}/@RELATIVE_IDL_INSTALL_PATH@/OpenHRP
includedir=${prefix}/@RELATIVE_HEADERS_INSTALL_PATH@

usage()
{
    cat <<EOF
Usage: hrp-config [OPTION] ...

Generic options
  --version	output openhrp-aist version information.
  --help	display this help and exit.

Compilation support options
  --cxxflags	print pre-processor and compiler flags
  --includes	print include path
  --libs	print library linking information

Install directories openhrp-aist was configured to
  --prefix[=DIR]
  --exec-prefix[=DIR]
  --idl-prefix[=DIR]

EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --idl-prefix)
      echo_idl_prefix=yes
      ;;
    --version)
      echo @CONFIG_VERSION@
      ;;
    --help)
      usage 0
      ;;
    --cxxflags)
      echo_cxxflags=yes
      ;;
    --includes)
      echo_includes=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi

if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi

if test "$echo_idl_prefix" = "yes"; then
	echo $idl_prefix
fi

if test "$echo_includes" = "yes"; then
      if test "$includedir" != "/usr/include" ; then
            echo -I$includedir
      fi
fi

if test "$echo_cxxflags" = "yes"; then
    echo @CMAKE_CXX_FLAGS_RELEASE@
fi

if test "$echo_libs" = "yes"; then
      if test "${prefix}" != "/usr" ; then
            echo "-L${prefix}/lib"
      fi
fi

exit 0
