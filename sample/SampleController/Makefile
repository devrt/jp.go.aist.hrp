SampleController.$(DLLSFX): $(OBJS)
	$(LINK) $(LINK_FLAGS) $(SOFLAGS) $(OUTOPT)$@ $(OBJS) $(RTM_LIBS)

SampleControllerComp: SampleControllerComp.o $(OBJS)
	$(LINK) $(LINK_FLAGS) $(OUTOPT)$@ SampleControllerComp.o $(OBJS) $(RTM_LIBS)

clean: clean_objs clean_skelstub
	rm -f *~

