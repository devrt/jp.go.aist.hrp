all: target

TOP = ../../
include $(TOP)Make.rules


# CXXFLAGS = `rtm-config --cflags`
CXX_FLAGS += -I../OpenHRP/$(CORBA_DIR) -I$../
# LDFLAGS  = `rtm-config --libs`
RTM_LIBS = -L$(OPENRTM_DIR)/lib -lpthread -lACE -lomniORB4 -lomnithread -lomniDynamic4 -lRTC
SHFLAGS  = -shared

# IDLC     = `rtm-config --idlc`
# IDLFLAGS = `rtm-config --idlflags` -I`rtm-config --prefix`/include/rtm/idl
